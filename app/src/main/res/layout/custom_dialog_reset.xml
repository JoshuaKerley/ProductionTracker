<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Are you sure you want to reset all data for the current day?"
        android:textSize="@dimen/_20sdp"
        android:gravity="center_horizontal"
        android:id="@+id/resetDialogText"
        android:layout_marginTop="10pt"
        android:layout_alignParentTop="true" />



    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/resetDialogText"
        android:id="@+id/linearLayout2">

        <Button
            android:layout_width="0dip"
            android:layout_height="50pt"
            android:text="Cancel"
            android:textSize="@dimen/_20sdp"
            android:layout_weight="1"
            android:background="#3399ff"
            android:layout_marginTop="10pt"
            android:layout_marginBottom="10pt"
            android:layout_marginRight="5pt"
            android:layout_marginLeft="10pt"
            android:id="@+id/buttonDialog_Cancel" />

        <Button
            android:layout_width="0dip"
            android:layout_height="50pt"
            android:text="Yes"
            android:textSize="@dimen/_20sdp"
            android:layout_weight="1"
            android:background="#3399ff"
            android:layout_marginTop="10pt"
            android:layout_marginBottom="10pt"
            android:layout_marginRight="10pt"
            android:layout_marginLeft="5pt"
            android:id="@+id/buttonDialog_Yes" />

    </LinearLayout>

</RelativeLayout>